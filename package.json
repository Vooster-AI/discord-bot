{
  "name": "discord-bot",
  "version": "1.0.0",
  "description": "Discord Bot Server with TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "prisma:generate": "pnpm prisma generate",
    "prisma:migrate": "pnpm prisma migrate dev",
